@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <div class="dropdown show pr-3 ">
            <a class="nav-link" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @User.Identity.GetUserName()
            </a>
            <div class="dropdown-menu " aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item pr-0" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
            </div>
        </div>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right pr-3">
        @Html.ActionLink("Войти", "Login", "Account", null, new { @class = "nav-link", id = "loginLink" })
    </ul>
}

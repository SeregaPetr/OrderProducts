@model OrderProducts.Models.ViewModels.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Логин";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >
    <div class="form-signin">
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Вход в систему</h1>
            <p class="lead">Пожалуйста, введите данные:</p>
        </div>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row form-label-group">
                <div class="col-md-3 ">
                    @Html.LabelFor(model => model.UserLogin, new { @class = "mb-0" }):
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.UserLogin, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.UserLogin), autofocus = "autofocus" })
                    @Html.ValidationMessageFor(model => model.UserLogin, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row form-label-group">
                <div class="col-md-3 ">
                    @Html.LabelFor(model => model.Password, new { @class = "mb-0" }):
                </div>
                <div class="col-md-9">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Password) })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="checkbox pr-2 mt-1 text-right">
                <label>
                    <input type="checkbox" value="remember-me"> Запомнить
                </label>
            </div>
            <input type="submit" value="Войти" class="btn btn-primary btn-block" />
            <div class="text-right mt-2 pr-3">
                @Html.ActionLink("Регистрация", "Register")
            </div>
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>



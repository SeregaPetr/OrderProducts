@model IEnumerable<OrderProducts.Models.PaymentType>

@{
    ViewBag.Title = "Платежные системы";
}

<div class="container mt-4">
    <h2 class="pl-3">@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Создать новую", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.NamePaymentType).ToHtmlString(), "Sort", new { direction = @ViewBag.Direction })
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePaymentType)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Подробности", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
